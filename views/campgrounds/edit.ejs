<% layout('layouts/boilerplate.ejs') %>

    <!-- using method-override to mask this request as PUT instead of POST to be able to save updated data in DB-->
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        <div>
            <label for="titleInp">Title</label>
            <input type="text" name="campground[title]" id="titleInp" value="<%=campground.title%> ">
        </div>
        <div>
            <label for="locationInp">Location</label>
            <input type="text" name="campground[location]" id="locationInp" value="<%=campground.location%> ">
        </div>
        <button>Update Campground</button>
    </form>
    <a href="/campgrounds/<%= campground._id %> ">Cancel</a>