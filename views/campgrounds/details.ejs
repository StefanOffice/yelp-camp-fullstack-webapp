<% layout('layouts/boilerplate.ejs') %>

<div class="row">
    <div class="col-6 offset-3 mb-3">
        <div class="card mb-3 mt-3">
            <img src="<%= campground.image%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title%></h5>
                <p class="card-text"><%= campground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location%></li>
                <li class="list-group-item">$<%= campground.price%>/night</li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                added <%= Math.floor(Math.random() * 350) + 2 %> days ago 
            </div>
        </div>
        <h3>Leave a review</h3>
        <form action="/campgrounds/<%= campground._id %>/reviews" method = "POST" class="validated-form mb-3" novalidate>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" name="review[rating]" min = "1" max ="5" step="1" id="rating" class="form-range">
            </div>
            <div class="mb-3">
                <label class="form-label" for="revbody">Review</label>
                <textarea class="form-control" name="review[body]" id="revbody" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <a href="/campgrounds">All campgrounds</a>
    </div>
</div>
