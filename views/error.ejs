<% layout("layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><%= err.statusCode %> <%= err.message %></h4>
            <% if(process.env.NODE_ENV !== "production"){ %> 
            <p><%= err.stack %></p>
            <% } %> 
            <hr>
            <p class="mb-0">Don't worry, errors happen sometimes :)</p>
        </div>
    </div>
</div>
    